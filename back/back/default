server {
    listen 80;
    server_name 85.209.9.201;  # Замените на свой домен

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /var/www/backend;  # Путь к каталогу с проектом Django
    }

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:8000;  # Проксирование на порт, который вы указали в Gunicorn
        proxy_redirect off;
    }

    error_page 500 502 503 504 /500.html;
    location = /500.html {
        root /var/www/backend;  # Путь к каталогу с проектом Django
    }
}

server {
    listen 4000;

    root /var/www/site-landing;
    index index.html;

    server_name localhost; # Или ваш домен, если используете доменное имя

    location / {
        try_files $uri $uri/ =404;
    }
}

server {
    listen 666;
    server_name 85.209.9.201;  # Или ваш IP адрес

    location = /favicon.ico { access_log off; log_not_found off; }
    location /static/ {
        root /var/www/pharmacy_back;  # Путь к каталогу с проектом Django
    }

    location / {
        include proxy_params;
        proxy_pass http://127.0.0.1:2067;  # Проксирование на порт, который вы указали в Gunicorn
        proxy_redirect off;
    }
}

